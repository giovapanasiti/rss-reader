<div id="action-bar">
  <%= render "feeds/action_bar" %>
</div>


<h1><%= @story.title %></h1>

<div class="iframe-container">
  <iframe src="<%= @story.permalink %>" width="100%" height="600" frameborder="0"></iframe>
</div>

<style>
  .iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
  }
  .iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
